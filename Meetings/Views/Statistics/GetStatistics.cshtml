@model Meetings.ForMeetings.StatisticsViewModel

@{
    ViewBag.Title = "GetStatistics";
}

<h2>Статистика совещаний</h2>

<div>
    @using (Ajax.BeginForm("GetStatisticsPost", new AjaxOptions { UpdateTargetId = "results" }))
    {
    <div style="margin-top:10px; margin-bottom:10px;">
        @Html.LabelFor(m => m.FromDay, new { @class = "col-md-2 control-label" })
        <input type="date" class = "form-control" name="FromDay" value=@ViewBag.Today max=@DateTime.MaxValue min=@DateTime.MinValue>
    </div>
    <div style="margin-top:10px; margin-bottom:10px;">
        @Html.LabelFor(m => m.ToDay, new { @class = "col-md-2 control-label" })
        <input type="date" class = "form-control" name="ToDay" value=@ViewBag.Tomorrow max=@DateTime.MaxValue min=@DateTime.MinValue>
    </div>
        <button type="submit" id="update" class="btn btn-default" style="margin-bottom:10px;">Обновить</button>
    }
    <div id="results">
        @Html.Partial("GetStatisticsPost", Model.Meetings)
    </div>
</div>

@Scripts.Render("~/scripts/jquery-1.10.2.min.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")
